{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules", "dist"]
}